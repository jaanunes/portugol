programa {
  //Faça um algoritmo que leia N valores (Quando digitar 0, o programa fecha)
  // Apos encerrar as leituras, imprima na tela a quantidade de pares. 

  funcao inicio() 
  {
    inteiro valor, par = 0, resto
    faca{
      escreva("Digite um valor ")
      leia(valor)
      resto = valor % 2
      se(resto == 0 e valor != 0){
        par++
      }
    }enquanto(valor != 0)
    escreva("O numero de pares é", par)
      }
      
  } 
  }
